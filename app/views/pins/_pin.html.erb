<div id="<%= dom_id pin %>">

 <%= link_to image_tag(pin.image, style: "width:150px; height:150px"), pin %>
  <p><strong>
  <%#= link_to pin.user.username, user_path(pin.user.username) %>
  <%= link_to pin.user.username,  pin.user.username%>
  </strong>
  </p>
  <p class="my-5">
    <%= pin.description %>
  </p>

  <% if action_name != "show" %>
  
  <% if pin.user == current_user %>
    
    <%= link_to 'Edit this pin', edit_pin_path(pin), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>    
  <% end %>
  
  
</div>
